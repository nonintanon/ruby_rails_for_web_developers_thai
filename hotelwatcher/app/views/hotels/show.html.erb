<h1><%= @hotel.name %></h1>
<h2><%= @hotel.location_code %></h2>

<a href='#' class='btn btn-info'><%= @hotel.rooms.count %> rooms</a>
<a href='#' class='btn btn-info'><%= @hotel.watchers.count %> watchers</a>
<br/>
<br/>
<a href='#' class='btn btn-primary'>Watch this</a>

<div>
  <% @hotel.taggings.each do |tag| %>
    <a href='<%= tag.name %>' class='tag'><%= tag.name %></a>
  <% end %>
</div>


<div id='comments'>
  <%= render @hotel.comments, commentable: @hotel %>
  <%= render_comment_form_for @hotel %>
  <%#= render 'shared/register' unless current_user %>
</div>