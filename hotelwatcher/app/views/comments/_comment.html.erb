<%= div_for comment, class: 'clearfix' do %>
  <%= comment.body %>
  <span class='pull-right'>
    <%= comment.user rescue 'no user' %>
    <%= comment_action_for comment %>
  </span>
  <span class=''>
  <%= comment.created_at == comment.updated_at ? comment.created_at : comment.updated_at.to_s + " (edited)" %>
<% end %>